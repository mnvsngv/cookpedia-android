<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_margin="@dimen/form_padding">

    <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/view_step_image_height" android:id="@+id/stepNumber"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:textColor="@android:color/primary_text_light" android:layout_margin="@dimen/form_padding"
            android:gravity="center_vertical" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/stepDescription" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/view_step_image_height" android:id="@+id/stepDescription"
            android:layout_margin="@dimen/form_padding" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="9"
            android:gravity="center_vertical" app:layout_constraintLeft_toRightOf="@id/stepNumber"
            app:layout_constraintRight_toLeftOf="@id/stepImage" app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/primary_text_light"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/view_step_image_height"
            android:src="@drawable/ingredients"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/stepImage"
            android:layout_margin="@dimen/form_padding" app:layout_constraintHorizontal_weight="3"
            app:layout_constraintLeft_toRightOf="@id/stepDescription" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/stepDescription"/>
</android.support.constraint.ConstraintLayout>