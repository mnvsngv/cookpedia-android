<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             tools:context=".fragment.AddRecipePhotoFragment"
>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/recipeImage" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            tools:src="@drawable/ic_add_recipe_image_dark" app:srcCompat="@drawable/ic_add_recipe_image_dark"
            app:layout_constraintBottom_toBottomOf="parent" android:alpha="0.5"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_submit_recipe_light"
            android:id="@+id/submitRecipeFab"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/fab_margin"/>
</android.support.constraint.ConstraintLayout>